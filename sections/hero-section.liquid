<div class="hero-section">

  <div class="hero-container__desktop">
    <div class="hero-desktop__wrapper">
      <img loading="lazy" src="{{ section.settings.desktop_image | image_url }}" alt="desktop-image">
      <a class="desktop__button" href="/" style="background-color: {{ section.settings.button_color }};">{{
        section.settings.button_text }}</a>
    </div>
  </div>

  <div class="hero-container__mobile">
