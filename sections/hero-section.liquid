
<style>
  
  .hero-section {
    margin: -1rem 0;
  }
  
  .hero-desktop__wrapper > img, .hero-mobile__wrapper > img {
    width: 100%;
  }
  
  .hero-desktop__wrapper {
    position: relative;
  }
  

  
  @media screen and (min-width: 541px) {
    .hero-container__mobile {
      display: none;
    }
  }
  
  @media screen and (max-width: 540px) {
    .hero-container__desktop {
      display: none;
    }
    
    .desktop__button {
      background-color: {{ section.settings.button_color }};
      color: white;
      display: flex;
      align-items: center;
      justify-content: center;
      position: absolute;
      text-decoration: none;

      top: 80%;
      left: 54%;
      right: 20%;
      height: 40px;

      font-weight: bold;
      font-size: 2rem;   
    }
  }
  
    @media screen and (max-width: 768px) {
      .desktop__button {
        height: 35px;
        font-size: 1.6rem;
      }
    }
  }

  

</style>

<div class="hero-section">

  <div class="hero-container__desktop">
    <div class="hero-desktop__wrapper">
      <img src="{{ section.settings.desktop_image | image_url }}" alt="desktop-image">
      <a class="desktop__button" href="/">{{ section.settings.button_text }}</a>
    </div>
  </div>

  <div class="hero-container__mobile">
    <div class="hero-mobile__wrapper">
      <img src="{{ section.settings.mobile_image | image_url }}" alt="mobile-image">
      <a class="mobile__button" href="/">{{ section.settings.button_text }}</a>
    </div>
  </div>

</div>


{% schema %}
{
	"name": "Hero Section",
	"settings": [{
			"type": "image_picker",
			"id": "desktop_image",
			"label": "Desktop image"
		},
		{
			"type": "image_picker",
			"id": "mobile_image",
			"label": "Mobile image"
		},
		{
			"type": "text",
			"id": "button_text",
			"label": "Button Text"
		},
		{
			"type": "color",
			"id": "button_color",
			"label": "Button Color"
		}

	],
	"presets": [{
		"name": "Hero Section"
	}]
}
{% endschema %}

