
<style>
  
  .hero-section {
    margin: -1rem 0;
  }
  
  .hero-desktop__wrapper > img, .hero-mobile__wrapper > img {
    width: 100%;
  }
  
  @media screen and (min-width: 769px) {
    .hero-container__mobile {
      display: none;
    }
  }
  
  @media screen and (max-width: 768px) {
    .hero-container__desktop {
      display: none;
    }
  }

  

</style>

<div class="hero-section">

  <div class="hero-container__desktop">
    <div class="hero-desktop__wrapper">
      <img src="{{ section.settings.desktop_image | image_url }}" alt="desktop-image">
      <a href="/">{{ section.settings.button_text }}</a>
    </div>
  </div>

  <div class="hero-container__mobile">
    <div class="hero-mobile__wrapper">
      <img src="{{ section.settings.mobile_image | image_url }}" alt="mobile-image">
      <a href="/">{{ section.settings.button_text }}</a>
    </div>
  </div>

</div>


{% schema %}
{
	"name": "Hero Section",
	"settings": [{
			"type": "image_picker",
			"id": "desktop_image",
			"label": "Desktop image"
		},
		{
			"type": "image_picker",
			"id": "mobile_image",
			"label": "Mobile image"
		},
		{
			"type": "text",
			"id": "button_text",
			"label": "Button Text"
		}

	],
	"presets": [{
		"name": "Hero Section"
	}]
}
{% endschema %}

