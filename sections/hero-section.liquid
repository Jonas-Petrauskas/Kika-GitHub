
<style>
  
  .hero-container__desktop > img, .hero-container__mobile > img {
    width: 100%;
  }
  
  @media screen and (min-width: 769px) {
    .hero-container__mobile {
      display: none;
    }
  }
  
  @media screen and (max-width: 768px) {
    .hero-container__desktop {
      display: none;
    }
  }

  

</style>

<div class="hero-section">

  <div class="hero-container__desktop">
<!--     <div class="hero-desktop__wrapper"> -->
      <img src="{{ section.settings.desktop_image | image_url }}" alt="desktop-image">
      <a href=""></a>
<!--     </div> -->
  </div>

  <div class="hero-container__mobile">
<!--     <div class="hero-mobile__wrapper"> -->
      <img src="{{ section.settings.mobile_image | image_url }}" alt="mobile-image">
      <a href=""></a>
<!--     </div> -->
  </div>

</div>


