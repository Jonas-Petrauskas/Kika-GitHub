
<div class="shop-products__wrapper">
  {% for block in section.blocks %}
  <div class="shop-products__block">
    <div class="block-image__container">
      <img src="{{ block.settings.image | image_url }}" alt="{{ block.settings.image.alt }}">
    </div>
    <div class="block-button__container">
      <a href="/">{{ block.settings.button_text }}</a>
    </div>
  </div>
  {% endfor %}
</div>

{% schema %}
{
  "name": "Shop Products Blocks",
  "max_blocks": 3,
  "settings": [{
    "type": "color_background",
    "id": "background",
    "label": "Section Color"
  }],
  "blocks": [{
    "name": "Section Block",
    "type": "section",
    "settings": [{
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text"
      }
    ]
  }]
}
{% endschema %}

