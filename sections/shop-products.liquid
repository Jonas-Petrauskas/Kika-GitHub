<style>

  .shop-products__main {
    padding: 1rem 0;
    background-color: {{ section.settings.background_color }};
  }

  .block-image__container > img {
    width: 100%;
    height: auto;
  }

  .block-image__container {
    padding: 2rem 0;
    position: relative;
    }

    .block-button__container {
      display: flex;
      align-items: center;
      justify-content: center;
      position: absolute;
      top: 85%;
      left: 20%;
      right: 20%;
      height: 35px;
    }

    .block-button__container > a {
      text-decoration: none;
      color: white;
      font-weight: 600;
      font-size: 1.2rem;
    }

  @media screen and (min-width: 540px) {

    .block-button__container {
      top: 88%;
      left: 25%;
      right: 25%;
      height: 40px;
    }
  }


  @media screen and (min-width: 768px) {
    .shop-products__wrapper {
      display: flex;
      width: 80%;
      margin: auto;
      padding: 3rem 0;
    }
    
    .shop-products__block {
      padding: 1rem 2rem;
    }

    .block-button__container {
      top: 85%;
      left: 15%;
      right: 15%;
      height: 30px;
    }

    .block-image__container {
      padding: 0;
    }

  }

  @media screen and (min-width: 1024px) {
    .block-button__container > a {
      font-size: 1.6rem;
    }

    .shop-products__block {
      padding: 1rem 3rem;
    }

    .block-button__container {
      height: 35px;
    }
  }

</style>

<div class="shop-products__main">
  <div class="shop-products__wrapper">
    {% for block in section.blocks %}
    <div class="shop-products__block">
      <div class="block-image__container">
        <img 
        loading="lazy"
        src="{{ block.settings.image | image_url: image_size }}" 
        alt="{{ block.settings.image.alt }}">
        <div class="block-button__container"
        style="background-color: {{ block.settings.button_color }};">
          <a href="/">{{ block.settings.button_text }}</a>
        </div>
      </div>
    </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Shop Products Blocks",
  "max_blocks": 3,
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Section Color"
    }
  ],
  "blocks": [
    {
      "name": "Section Block",
      "type": "section",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text"
        },
        {
          "type": "color",
          "id": "button_color",
          "label": "Button Color"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Shop Section Blocks"
    }
  ]
}
{% endschema %}


