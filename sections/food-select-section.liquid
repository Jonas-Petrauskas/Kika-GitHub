<style>

  .food-section-card__wrapper {
    max-width: 25%;
    padding: 1rem 1rem 2rem 1rem;
  }

  .food-section__block {
    display: flex;
    flex-wrap: wrap;
  }

  .best-sellers-title__container h3 {
    text-align: center;
    font-size: 4rem;
    color: #035966;
  }

  .item-image {
    display: flex;
  }

  .item-image img {
    margin: auto;
    width: 75%;
  }

  .food-section-card__container {
    padding-bottom: 2rem;
    box-shadow: rgba(67, 71, 85, 0.27) 0px 0px 0.25em, rgba(90, 125, 188, 0.05) 0px 0.25em 1em;
  }

  .item-title {
    color: #035966;
    font-weight: bold;
    line-height: 2rem;
  }

  .item-price {
    padding: 1rem 0;
    font-weight: bold;
    border-bottom: 1px solid #B2B2B2;
  }

  .item-image, .item-title, .item-price {
    margin: auto;
    width: 90%;
  }

  .item-features {
    padding-left: 32px;
    padding-right: 10px;
  }

  .best-sellers-button {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 75%;
    height: 3.5rem;
    text-decoration: none;
    color: white;
    background: #035966;
    font-size: 1.7rem;
    font-weight: bold;
    margin-left: 15px;
  }
</style>


{% assign collection = collections[section.settings.collection] %}

<div class="food-section__wrapper {{ collection.handle }}" >

  <div class="food-section__block page-width">
    {% for product in collections[section.settings.collection].products %}
    <div class="food-section-card__wrapper">
      <div class="food-section-card__container">
        <div class="item-image"><img loading="lazy" src="{{ product | image_url: image_size }}" alt=""></div>
        <div class="item-title">{{ product.title }}</div>
        <div class="item-price">{{ product.price | money }}</div>
  
          <ul class="item-features">
            <li>{{ section_product.metafields.best_sellers.feature_one }}</li>
            <li>{{ section_product.metafields.best_sellers.feature_two }}</li>
            <li>{{ section_product.metafields.best_sellers.feature_three }}</li>
            <li>{{ section_product.metafields.best_sellers.feature_four }}</li>
            <li>{{ section_product.metafields.best_sellers.feature_five }}</li>
            <li>{{ section_product.metafields.best_sellers.feature_six }}</li>
          </ul>

          <a class="best-sellers-button" href="/">{{ section.settings.button_text }}</a>

      </div>
    </div>
    {% endfor %}
  </div>

</div>

{% schema %}
  {
    "name": "Food Select",
    "settings": [{
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    }
    ],
    "presets": [{
      "name": "Food Select Section"
    }]
  }
{% endschema %}

